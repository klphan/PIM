@model PIM.Web.Models.ProjectFormViewModel
@{
    ViewBag.Title = "ProjectForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm(Model.EditMode ? "Update" : "Create", "Projects"))
{
    if (Model.EditMode == true)
    {
        <h2>Edit Project</h2>
    }
    else
    { <h2>New Project</h2>}

    <div class="form-group">
        @Html.LabelFor(p => p.Project.ProjectNumber)
        @if (Model.EditMode == true)
        {
            @Html.TextBoxFor(p => p.Project.ProjectNumber, new { @class = "form-control", @readonly = "readonly" })
        }
        else
        {
            @Html.TextBoxFor(p => p.Project.ProjectNumber, new { @class = "form-control" })
        }
        @Html.ValidationMessageFor(p => p.Project.ProjectNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Project.Name)
        @Html.TextBoxFor(p => p.Project.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Project.Customer)
        @Html.TextBoxFor(p => p.Project.Customer, new { @class = "form-control" })
    </div>
   
    <div class="form-group">
        @Html.LabelFor(p => p.Project.GroupId)
        @Html.DropDownListFor(p => p.Project.GroupId, new SelectList(Model.GroupIds), "Select Group", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Project.Status)
        @Html.EnumDropDownListFor(p => p.Project.Status, "Select Status", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Project.StartDate)
        @Html.TextBoxFor(p => p.Project.StartDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Project.EndDate)
        @Html.TextBoxFor(p => p.Project.EndDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Members)
        @Html.TextBoxFor(p => p.Members, new { @class = "form-control" })
    </div>

    <div>
        @Html.HiddenFor(p => p.Project.ID)
       
    </div>

    <button type="button" class="btn">@Html.ActionLink("Cancel", "Index", "Projects")</button>
    if (Model.EditMode == true)
    {
        <button type="submit" class="btn btn-primary">Edit Project</button>

    }
    else
    { <button type="submit" class="btn btn-primary">Create Project</button>}
}

