@model PIM.Web.Models.IndexPageViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects List</h2>
<p>
    @Html.ActionLink("New Project", "NewProjectForm", "Projects", null, new { @class = "btn btn-primary" })


</p>
@Html.Partial("_SearchView")
@if (!Model.Projects.Any())
{
    <p>We don't have any projects yet</p>
}
else
{


    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Project Number</th>
                <th>Project Name</th>
                <th>Status</th>
                <th>Customer</th>
                <th>Start Date</th>
                <th>Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr>
                    <td><input type="checkbox"></td>
                    <td>@project.ProjectNumber</td>
                    <td>
                        <a href="/Projects/EditProjectForm/@project.ID" id="@project.ID">@project.Name</a>
                    </td>
                    <td>@project.Status</td>
                    <td>@project.Customer</td>
                    <td>@project.StartDate</td>

                    @if (project.Status == PIM.Core.Status.New)
                    {
                        <td>
                            
                            <a href="/Projects/Delete/@project.ID" id="@project.ID">
                                delete
                            </a>
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }


                </tr>
            }
        </tbody>
    </table>
}
