@model PIM.Web.Models.IndexPageViewModel
@using PagedList.Mvc;
@using PIM.Core.Entities
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<h4>@PIM.Web.Resources.Resource.ProjectList</h4>

@Html.Partial("_SearchView")
@if (!Model.Projects.Any())
{
<p>@PIM.Web.Resources.Resource.NoProjectMessage</p>
}
else
{



    <table style="width:100%" id="customers" class="table table-bordered table-hover table-sm">
        <thead>
            <tr>
                <th style="width: 3%"> </th>
                <th style="width: 10%">
                    @Html.ActionLink(
                  linkText: @PIM.Web.Resources.Resource.Number,
                  actionName: "Index",
                  controllerName: "Projects",
                  routeValues:
                  new RouteValueDictionary{
                      { "ProjectCriteria.SortProperty", "ProjectNumber" },
                      { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending ?
                      PIM.Core.Entities.SortDirection.Descending : PIM.Core.Entities.SortDirection.Ascending  },
                      { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                      { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                  },
                  htmlAttributes: null
                  )
                    @if (Model.ProjectCriteria.SortProperty == "ProjectNumber")

                    {
                        if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending)
                        {
                            <span class="glyphicon glyphicon-triangle-top"></span>
                        }
                        else if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Descending)
                        {
                            <span class="glyphicon glyphicon-triangle-bottom"></span>
                        }
                    }
                </th>
                <th style="width: 40%">
                    @Html.ActionLink(
                   linkText: @PIM.Web.Resources.Resource.ProjectName,
                   actionName: "Index",
                   controllerName: "Projects",
                   routeValues:
                   new RouteValueDictionary{
                       { "ProjectCriteria.SortProperty", "Name" },
                       { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending ?
                       PIM.Core.Entities.SortDirection.Descending : PIM.Core.Entities.SortDirection.Ascending  },
                       { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                       { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                   },
                   htmlAttributes: null
                   )
                    @if (Model.ProjectCriteria.SortProperty == "Name")

                    {
                        if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending)
                        {
                            <span class="glyphicon glyphicon-triangle-top"></span>
                        }
                        else if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Descending)
                        {
                            <span class="glyphicon glyphicon-triangle-bottom"></span>
                        }
                    }
                </th>
                <th style="width: 10%">
                    @Html.ActionLink(
                    linkText: @PIM.Web.Resources.Resource.Status,
                    actionName: "Index",
                    controllerName: "Projects",
                    routeValues:
                    new RouteValueDictionary{
                        { "ProjectCriteria.SortProperty", "Status" },
                        { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending ?
                        PIM.Core.Entities.SortDirection.Descending : PIM.Core.Entities.SortDirection.Ascending  },
                        { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                        { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                    },
                    htmlAttributes: null
                    )
                    @if (Model.ProjectCriteria.SortProperty == "Status")

                    {
                        if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending)
                        {
                            <span class="glyphicon glyphicon-triangle-top"></span>
                        }
                        else if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Descending)
                        {
                            <span class="glyphicon glyphicon-triangle-bottom"></span>
                        }
                    }
                </th>
                <th style="width: 20%">
                    @Html.ActionLink(
                    linkText: @PIM.Web.Resources.Resource.Customer,
                    actionName: "Index",
                    controllerName: "Projects",
                    routeValues:
                    new RouteValueDictionary{
                        { "ProjectCriteria.SortProperty", "Customer" },
                        { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending ?
                        PIM.Core.Entities.SortDirection.Descending : PIM.Core.Entities.SortDirection.Ascending  },
                        { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                        { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                    },
                    htmlAttributes: null
                    )
                    @if (Model.ProjectCriteria.SortProperty == "Customer")

                    {
                        if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending)
                        {
                            <span class="glyphicon glyphicon-triangle-top"></span>
                        }
                        else if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Descending)
                        {
                            <span class="glyphicon glyphicon-triangle-bottom"></span>
                        }
                    }
                </th>
                <th style="width: 10%">
                    @Html.ActionLink(
                  linkText: @PIM.Web.Resources.Resource.StartDate,
                  actionName: "Index",
                  controllerName: "Projects",
                  routeValues:
                  new RouteValueDictionary{
                      { "ProjectCriteria.SortProperty", "StartDate" },
                      { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending ?
                      PIM.Core.Entities.SortDirection.Descending : PIM.Core.Entities.SortDirection.Ascending  },
                      { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                      { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                  },
                  htmlAttributes: null
                  )
                    @if (Model.ProjectCriteria.SortProperty == "StartDate")

                    {
                        if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Ascending)
                        {
                            <span class="glyphicon glyphicon-triangle-top"></span>
                        }
                        else if (Model.ProjectCriteria.SortDirection == PIM.Core.Entities.SortDirection.Descending)
                        {
                            <span class="glyphicon glyphicon-triangle-bottom"></span>
                        }
                    }
                </th>
                <th style="width: 7%">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr id="@project.Id">
                    @if (project.Status == Status.New)
                    {
                        <td class="align-center"><input type="checkbox" name="projectIdsToDelete" id="projectIdsToDelete" value="@project.Id"> </td>
                    }
                    else
                    {
                        <td></td>
                    }
                    
                    <td><a href="Projects/ProjectDetails/@project.Id" id="@project.Id"> @project.ProjectNumber</a></td>
                    <td>@project.Name</td>
                    <td>@project.Status</td>
                    <td>@project.Customer</td>
                    <td input type="date">@project.StartDate.ToString("dd.MM.yyyy")</td>

                    @if (project.Status == Status.New)
                    {
                        <td class="align-center">
                            @using (Html.BeginForm("Delete", "Projects", FormMethod.Post, new { id = "DeleteForm" }))
                            {

                                <input name="id" value="@project.Id" type="hidden" />

                                <button class="delete-btn"><img src="~/Resources/trash-can.png" width="22" class="align-center"></button>
                            }
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
            }
            <tr id="deleteMultiple">
                <td colspan="7">

                    <span id="countChecks"> @PIM.Web.Resources.Resource.No_item_selected</span>
                    <span style="float:right; padding-right:19px">@PIM.Web.Resources.Resource.delete_selected_item <img src="~/Resources/trash-can.png" width="22" id="delete-multiple-btn" class="align-center"></span>
                </td>
            </tr>
        </tbody>

    </table>

    @Html.PagedListPager(Model.Projects, page => Url.Action("Index", new RouteValueDictionary{
       { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
       { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
       { "ProjectCriteria.SortProperty", Model.ProjectCriteria.SortProperty },
       { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection  },
       { "ProjectCriteria.ItemsPerPage", Model.ProjectCriteria.ItemsPerPage },
       { "ProjectCriteria.Page", page },

    }))
    <br />
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@PIM.Web.Resources.Resource.ConfirmDelete</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>@PIM.Web.Resources.Resource.delete_modal_body</p>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-primary" id="btnDeleteYes" heref="#">@PIM.Web.Resources.Resource.Yes</button>

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        @PIM.Web.Resources.Resource.No
                    </button>
                </div>
            </div>

        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/Scripts/projects.js")
}
