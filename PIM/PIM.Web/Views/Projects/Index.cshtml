@model PIM.Web.Models.IndexPageViewModel
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<h4>Projects List</h4>

@Html.Partial("_SearchView")
@if (!Model.Projects.Any())
{
    <p>We don't have any projects yet</p>
}
else
{



    <table style="width:100%" id="customers" class="table table-bordered table-hover table-sm">
        <thead>
            <tr>
                <th style="width: 3%"> </th>
                <th style="width: 5%">
                    @Html.ActionLink(
                  linkText: "Number",
                  actionName: "Index",
                  controllerName: "Projects",
                  routeValues:
                  new RouteValueDictionary{
                      { "ProjectCriteria.SortProperty", "ProjectNumber" },
                      { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.SortDirection.Ascending ?
                      PIM.Core.SortDirection.Descending : PIM.Core.SortDirection.Ascending  },
                      { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                      { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                  },
                  htmlAttributes: null
                  )
                </th>
                <th style="width: 45%">
                    @Html.ActionLink(
                   linkText: "Project Name",
                   actionName: "Index",
                   controllerName: "Projects",
                   routeValues:
                   new RouteValueDictionary{
                       { "ProjectCriteria.SortProperty", "Name" },
                       { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.SortDirection.Ascending ?
                       PIM.Core.SortDirection.Descending : PIM.Core.SortDirection.Ascending  },
                       { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                       { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                   },
                   htmlAttributes: null
                   )
                </th>
                <th style="width: 10%"> 
                   @Html.ActionLink(
                   linkText: "Status",
                   actionName: "Index",
                   controllerName: "Projects",
                   routeValues:
                   new RouteValueDictionary{
                       { "ProjectCriteria.SortProperty", "Status" },
                       { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.SortDirection.Ascending ?
                       PIM.Core.SortDirection.Descending : PIM.Core.SortDirection.Ascending  },
                       { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                       { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                   },
                   htmlAttributes: null
                   )
                </th>
                <th style="width: 20%">
                  @Html.ActionLink(
                  linkText: "Customer",
                  actionName: "Index",
                  controllerName: "Projects",
                  routeValues:
                  new RouteValueDictionary{
                      { "ProjectCriteria.SortProperty", "Customer" },
                      { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.SortDirection.Ascending ?
                      PIM.Core.SortDirection.Descending : PIM.Core.SortDirection.Ascending  },
                      { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                      { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                  },
                  htmlAttributes: null
                  )
                </th>
                <th style="width: 10%">
                    @Html.ActionLink(
                  linkText: "Start Date",
                  actionName: "Index",
                  controllerName: "Projects",
                  routeValues:
                  new RouteValueDictionary{
                      { "ProjectCriteria.SortProperty", "StartDate" },
                      { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection == PIM.Core.SortDirection.Ascending ?
                      PIM.Core.SortDirection.Descending : PIM.Core.SortDirection.Ascending  },
                      { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
                      { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
                  },
                  htmlAttributes: null
                  )
                </th>
                <th style="width: 7%">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.Projects)
            {
                <tr id="@project.ID">
                    @if (project.Status == PIM.Core.Status.New)
                    {
                        <td align="center"><input type="checkbox" name="projectIdsToDelete" id="projectIdsToDelete" value="@project.ID"> </td>
                    }
                    else
                    {
                        <td></td>
                    }

                    <td><a href="/Projects/ProjectDetails/@project.ID" id="@project.ID"> @project.ProjectNumber</a></td>
                    <td>@project.Name</td>
                    <td>@project.Status</td>
                    <td>@project.Customer</td>
                    <td input type="date">@project.StartDate.ToString("dd.MM.yyyy")</td>

                    @if (project.Status == PIM.Core.Status.New)
                    {
                        <td align="center">
                            @using (Html.BeginForm("Delete", "Projects", FormMethod.Post, new { id = "DeleteForm" }))
                            {

                                <input name="id" value="@project.ID" type="hidden" />

                                <button class="delete-btn"><img src="~/Resources/trash-can.png" width="22" align="middle"></button>
                            }
                        </td>

                    }
                    else
                    {
                        <td></td>
                    }
                </tr>

            }
            <tr id="deleteMultiple">
                <td colspan="7">

                    <span id="countChecks"> No item selected</span>
                    <span style="float:right; padding-right:19px">delete selected items <img src="~/Resources/trash-can.png" width="22" id="delete-multiple-btn" align="right"></span>
                </td>
            </tr>
        </tbody>

    </table>

    @Html.PagedListPager(Model.Projects, page => Url.Action("Index", new RouteValueDictionary{
       { "ProjectCriteria.Status", (int?)Model.ProjectCriteria.Status },
       { "ProjectCriteria.Text", Model.ProjectCriteria.Text },
       { "ProjectCriteria.SortProperty", Model.ProjectCriteria.SortProperty },
       { "ProjectCriteria.SortDirection", Model.ProjectCriteria.SortDirection  },
       { "ProjectCriteria.ItemsPerPage", Model.ProjectCriteria.ItemsPerPage },
       { "ProjectCriteria.Page", page },
       
    }))


    <br />


    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Confirm Delete</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete selected project?</p>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-primary" id="btnDeleteYes" heref="#">Yes</button>

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        No
                    </button>
                </div>
            </div>

        </div>
    </div>
}


@section scripts {
    @Scripts.Render("~/Scripts/projects.js")
}
