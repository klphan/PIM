@model IEnumerable<PIM.Core.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects List</h2>
<p>
    @Html.ActionLink("New Project", "NewProjectForm", "Projects", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Search Project", "Search", "Projects", null, new { @class = "btn btn-primary" })
</p>
@if (!Model.Any())
{
    <p>We don't have any projects yet</p>
}
else
{


<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Project Number</th>
            <th>Project Name</th>
            <th>Status</th>
            <th>Customer</th>
            <th>Start Date</th>
            <th>Delete</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
        <tr>
            <td><input type="checkbox"></td>
            <td>@project.ProjectNumber</td>
            <td>@Html.ActionLink(project.Name,"EditProjectForm", "Projects", null, new { id = project.ID })</td>
            <td>@project.Status</td>
            <td>@project.Customer</td>
            <td>@project.StartDate</td>
            <td>@project.ID</td>


        </tr>
        }
    </tbody>
</table>
}
