@model PIM.Web.Models.ProjectFormViewModel
@{
    ViewBag.Title = "ProjectDetails";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
@using (Html.BeginForm(Model.EditMode ? "Update" : "Create", "Projects"))

{
    if (Model.Exception != null)
    {
        @Html.ValidationSummary(false)
    }
    else
    {
        @Html.ValidationSummary(true, "Please enter all the mandatory fields(*)")
    }

    if (Model.EditMode == true)
    {
        <h4>Edit Project</h4>
    }
    else
    { <h4>New Project</h4>}
    <hr />
    <div class="form-group row">
        @Html.LabelFor(p => p.Project.ProjectNumber, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @if (Model.EditMode == true)
            {
                @Html.TextBoxFor(p => p.Project.ProjectNumber, new { size = 20, style = "background-color: #ced4da", @class = "custom-form-control", @readonly = "readonly" })
            }
            else
            {
                @Html.TextBoxFor(p => p.Project.ProjectNumber, new { size = 20, @class = "custom-form-control" })

            }
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(p => p.Project.Name, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.Project.Name, new { @class = "custom-form-control", size = 80 })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(p => p.Project.Customer, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.Project.Customer, new { size = 80, @class = "custom-form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(p => p.Project.GroupId, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(p => p.Project.GroupId, new SelectList(Model.Groups, "ID", "GroupLeader.Visa"), "Select Group", new { @class = "custom-form-control" })
        </div>
    </div>
    <div class="form-group row">

        @Html.LabelFor(p => p.Members, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.Members, new { size = 80, @class = "custom-form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(p => p.Project.Status, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EnumDropDownListFor(p => p.Project.Status, "Select Status", new { @class = "custom-form-control" })
        </div>
    </div>
    <div class ="row" id="date">

        
            @Html.LabelFor(p => p.Project.StartDate, new { @class = "col-sm-2 col-form-label" })
       
        <div class="col-sm-3" style="margin-left: 5px">
            @Html.TextBoxFor(p => p.Project.StartDate, "{0:dd/MM/yyyy}", new { size = 20, @class = "custom-form-control" })
        </div>
        
       
            @Html.LabelFor(p => p.Project.EndDate, new { @class = "col-sm-2 col-form-label" })
            
        <div class="col-sm-3">
            @Html.TextBoxFor(p => p.Project.EndDate, "{0:dd/MM/yyyy}", new { size = 20, @class = "custom-form-control", style="margin-left: -25px" })
        </div>
    </div>
    <hr />
    <div>
        @Html.HiddenFor(p => p.Project.ID)

    </div>
    <div id="projects-btn" class="row">
        <button id="cancel-btn" type="button" class="btn btn-secondary col-3">@Html.ActionLink("Cancel", "Index", "Projects")</button>
        @if (Model.EditMode == true)
        {
            <button type="submit" class="btn btn-primary">Edit Project</button>

        }
        else
        { <button type="submit" class="btn btn-primary col-3">Create Project</button>}
    </div>
}

